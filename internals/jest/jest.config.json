{
  "testEnvironment": "node",
  "rootDir": "../../",
  "setupFiles": ["./internals/jest/jest.setup.js"],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": ["src/**"],
  "coveragePathIgnorePatterns": ["/tests/"],
  "coverageThreshold": {
    "global": {
      "statements": 80,
      "branches": 70,
      "functions": 80,
      "lines": 85
    }
  },
  "testPathIgnorePatterns": ["/no-"]
}
