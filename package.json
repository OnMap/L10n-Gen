{
  "name": "l10n-gen",
  "version": "0.0.1",
  "description": "Localization generator for iOS/Android and more",
  "repository": "github:onmap/L1on-Gen",
  "author": "Philip Kramer (philip@onmap.co.il)",
  "license": "MIT",
  "main": "lib/index.js",
  "engines": {
    "node": ">= 4"
  },
  "files": [
    "bin",
    "lib"
  ],
  "bin": {
    "l1on-gen": "./bin/l1on-gen.js"
  },
  "scripts": {
    "build": "babel src -d lib",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix",
    "prepublish": "yarn build",
    "pretest": "yarn lint --cache",
    "test": "jest",
    "test:single": "yarn test --verbose",
    "test:ci": "yarn test --ci --colors --coverage --silent",
    "playground": "yarn test:single -- playground --watch",
    "precommit": "lint-staged",
    "prettier:all": "prettier-eslint \"**/*.js\" --write",
    "prettier": "prettier-eslint --write"
  },
  "dependencies": {
    "archiver": "2.1.0",
    "axios": "^0.17.1",
    "commander": "^2.12.2",
    "glob": "7.1.2",
    "lodash": "4.17.4",
    "unzip2": "0.2.5",
    "xml2js": "0.4.19",
    "xml2js-xpath": "^0.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.14.0",
    "eslint-config-babel": "^7.0.2",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-node": "^5.2.1",
    "jest": "^22.0.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/*.js"
    ]
  }
}
