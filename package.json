{
  "name": "l10n-gen",
  "version": "0.0.3",
  "description": "Localization generator for iOS/Android and more",
  "repository": "github:onmap/L10n-Gen",
  "author": "Philip Kramer (philip@onmap.co.il)",
  "license": "MIT",
  "main": "lib/index.js",
  "engines": {
    "node": ">= 4"
  },
  "files": ["bin", "dist"],
  "bin": {
    "l10n-gen": "./bin/l10n-gen.js"
  },
  "scripts": {
    "build": "babel src -d dist",
    "prepublishOnly": "yarn build",
    "precommit": "kcd-scripts precommit",
    "test": "jest",
    "test:single": "yarn test --verbose",
    "test:ci": "yarn test --ci --colors --coverage --silent",
    "lint": "kcd-scripts lint",
    "format": "kcd-scripts format"
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "dependencies": {
    "archiver": "^2.1.1",
    "axios": "^0.17.1",
    "commander": "^2.13.0",
    "glob": "7.1.2",
    "lodash": "4.17.4",
    "unzip2": "0.2.5",
    "xml2js": "0.4.19",
    "xml2js-xpath": "^0.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "jest": "^22.0.5",
    "kcd-scripts": "^0.32.1"
  }
}
