{
  "name": "l10n-gen",
  "version": "0.0.1",
  "description": "Localization generator for iOS/Android and more",
  "repository": "github:onmap/L1on-Gen",
  "main": "index.js",
  "bin": {
    "l10n-gen": "bin.js"
  },
  "scripts": {
    "build": "yarn build:clean && backpack build",
    "build:clean": "rm -rf build coverage",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "test": "bnr test",
    "test:single": "yarn test --verbose",
    "test:ci": "yarn test --ci --colors --coverage --silent",
    "playground": "yarn test:single -- playground --watch",
    "precommit": "lint-staged",
    "prettier:all": "prettier-eslint \"**/*.js\" --write",
    "prettier": "prettier-eslint --write"
  },
  "author": "Philip Kramer (philip@onmap.co.il)",
  "license": "MIT",
  "dependencies": {
    "archiver": "2.1.0",
    "axios": "^0.17.1",
    "backpack-core": "0.4.3",
    "commander": "^2.12.2",
    "glob": "7.1.2",
    "lodash": "4.17.4",
    "unzip2": "0.2.5",
    "xml2js": "0.4.19",
    "xml2js-xpath": "^0.8.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.10.0",
    "babel-eslint": "^8.1.2",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.0.4"
  }
}
